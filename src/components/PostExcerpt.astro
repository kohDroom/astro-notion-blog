---
import { Post } from '../lib/interfaces.ts'

export interface Props {
  post: Post
}

const { post } = Astro.props
---


<div class="post-excerpt">
  <div class={post.Excerpt ? 'post-kintonelink' : ''}>
    <a href={post.Excerpt ? post.Excerpt : ''}>{post.Excerpt ? 'kintone' : ''}</a>
  </div>
</div>


<style>

  .post-kintonelink {
    background-color: white;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    border: solid 0.5px #58adaf;
    font-size: 0.7rem;
    text-align: center;
    line-height: 50px;
  }

  .post-kintonelink a {
    color: #58adaf !important;
  }

  .post-kintonelink:hover {
    opacity: 0.5;
  }
  
</style>
