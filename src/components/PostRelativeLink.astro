---
import { Post } from '../lib/interfaces.ts'
import { getNavLink, getPostLink } from '../lib/blog-helpers.ts'
import PostTags from './PostTags.astro'

export interface Props {
  prevPost: Post
  nextPost: Post
}

const { prevPost, nextPost } = Astro.props
const jContent = "flex-end"
---

<div class="post-relative-link">
  <div>
    {
      nextPost && (
        <a href={getPostLink(nextPost.Slug)} class="colored">
          <div>◀︎ Next</div>
          <div>{nextPost.Title}</div>
          <PostTags post={nextPost} enableLink={false} />
        </a>
      )
    }
  </div>
  <div class="post-relative-link-Previous">
    {
      prevPost && (
        <a href={getPostLink(prevPost.Slug)} class="colored">
          <div style="text-align: right">▶︎ Previous</div>
          <div style="text-align: right">{prevPost.Title}</div>
          <div style=":root {{}}"><PostTags post={prevPost} enableLink={false} /></div>
        </a>
      )
    }
  </div>
  <!-- <div>
    <a href={getNavLink('/')} class="text">↑Top</a>
  </div> -->
</div>

<style>
  div.post-relative-link {
    display: flex;
    justify-content: space-between;
    margin-top: 3rem;
    padding-top: 20px;
    border-top: 0.5px solid #6e6e6e61;
  }
  div.post-relative-link > div {
    width: 49%;
    display: block;
    margin: 0.6rem 0 0 auto;
  }
  div.post-relative-link > div > a {
    display: block;
    margin: 0 0 0 auto;
    text-align: center;
    line-height: 1.2rem;
    font-size: 0.95rem;
  }
  div.post-relative-link > div > a:hover {
    opacity: 0.5;
  }
  div.post-relative-link > div > a.text {
    margin-top: 1rem;
    padding: 0.5rem;
    color: inherit;
    font-size: 1rem;
    text-decoration: underline;
    font-weight: 500;
  }
  div.post-relative-link > div > a.colored {
    padding: 1rem;
    border-radius: var(--radius);
    color: var(--fg);
    background: rgba(227, 226, 224, 0.5);
  }
  div.post-relative-link > div > a.colored > div:first-child {
    width: auto;
    text-align: left;
    font-size: 0.85rem;
  }
  div.post-relative-link > div > a.colored > div:nth-child(2) {
    width: auto;
    padding: 0.2rem 0 0.4rem;
    text-align: left;
    font-size: 1rem;
    font-weight: bold;
  }
  
</style>
